{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["ESNext", "DOM"],
    "module": "ES6",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "plugins": [{
      "name": "tslint-language-service"
    }],
    "rootDir": "src",
    "sourceMap": true,
    "strict": true
  },
  "exclude": [
    ".cache/",
    ".git/",
    "dist/",
    "node_modules/"
  ]
}
