@import '../App/mixins'

.container-relative
  height auto !important
  width 100% !important

.container-absolute
  bottom -100%
  left -100%
  margin auto
  position absolute
  right -100%
  top -100%
  z-index -1

.animation
  display block

.animation-relative
  @extend .animation
  height auto !important
  width 100% !important

.animation-absolute
  @extend .animation
  position absolute

.content
  z-index 1
