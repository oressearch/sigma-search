@import '../../App/mixins'

.section
  display flex
  position relative

.countries
  display flex

.country
  flex 1
  opacity .9
  transition opacity 300ms
  transition-timing-function cubic-bezier(0.215, 0.61, 0.355, 1)
  &:hover
    opacity 1

.container
  bottom 0
  color white
  display flex
  flex-direction column
  height 100%
  justify-content flex-end
  left 0
  padding-bottom 50px
  pointer-events none
  position absolute
  right 0
  top 0
  +media-lt(sm)
    padding-bottom 15px
