@import '../../App/mixins'

.section
  {with-height-100}
  display flex
  flex-direction column
  height 0
  justify-content center
  overflow hidden
  position relative
  +media-lt(sm)
    min-height: calc(75vh - 60px)

.container
  color white
  margin-top 7rem
  z-index 1
  pointer-events none
  +media-lt(sm)
    margin-top 0

.img
  width: auto
  position: fixed
  bottom: 10px
  right: 10px
  max-width: 225px

  +media-lt(md)
    max-width: 175px

  +media-lt(sm)
    max-width: 100px

.anim
  top: 0;
  bottom: inherit;
