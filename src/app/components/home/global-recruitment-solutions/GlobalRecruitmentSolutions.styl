@import 'stylus-media-breakpoint'

@import '../../../variables'

.section
  display flex
  flex-direction column
  height "calc(100vh - %s)" % nav-height
  justify-content center
  overflow hidden
  position relative
  +media-lt(sm)
    height "calc(100vh - %s)" % nav-height-sm

.content
  color white
  z-index 1
