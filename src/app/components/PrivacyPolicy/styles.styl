@import '../App/mixins'

.banner
  align-items center
  background gray-sm
  bottom 15px
  box-shadow 0 10px 20px rgba(0, 0, 0, .19), 0 6px 6px rgba(0, 0, 0, .23)
  display flex
  font-size 14px
  justify-content center
  left 15px
  padding 5px 0
  position fixed
  right 15px
  z-index 1
  > *
    font-size 14px
    margin 0 10px
  a
    text-decoration underline
