@import '../App/mixins'

.banner
  align-items center
  background gray-sm
  bottom 15px
  box-shadow 0 10px 20px rgba(0, 0, 0, .19), 0 6px 6px rgba(0, 0, 0, .23)
  display flex
  font-size 14px
  justify-content center
  left 15px
  padding 5px 0
  position fixed
  right 15px
  z-index 1
  > *
    font-size 14px
    margin 0 10px
  a
    text-decoration underline

.section
  background gray-sm
  padding-bottom 50px
  padding-top 50px
  +media-lt(sm)
    padding-bottom 15px
    padding-top 15px

.container
  h1
    font-size 52px
    line-height 52px
    margin 0 0 50px 0
    +media-lt(lg)
      font-size 36px
      line-height 36px
      margin 0 0 25px 0
  h2
    font-size 42px
    margin 40px 0
    +media-lt(lg)
      font-size 26px
      line-height 26px
      margin 20px 0
  h3
    font-size 32px
    margin 30px 0
    +media-lt(lg)
      font-size 22px
      line-height 22px
      margin 15px 0
  ul
    margin-top 25px
    padding-left 25px
