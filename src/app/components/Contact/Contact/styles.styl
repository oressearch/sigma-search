@import '../../App/mixins'

.section
  display flex
  position relative

.countries
  display flex
  +media-lt(lg)
    display grid
    grid-template-columns repeat(3, minmax(0, 1fr))
  +media-lt(sm)
    grid-template-columns repeat(2, minmax(0, 1fr))

.country
  flex 1
  opacity .9
  transition opacity 300ms
  transition-timing-function cubic-bezier(0.215, 0.61, 0.355, 1)
  &:hover
    opacity 1

.container
  bottom 0
  color white
  display flex
  flex-direction column
  height 100%
  justify-content flex-start
  left 0
  padding-top 50px
  pointer-events none
  position absolute
  right 0
  top 0
  +media-lt(sm)
    padding-top 15px
