@import '../../common'

.container-relative
  height auto !important
  width 100% !important

.container-absolute
  position absolute
  margin auto
  left -100%
  right -100%
  top -100%
  bottom -100%

.animation
  display block

.animation-relative
  @extend .animation
  height auto !important
  width 100% !important

.animation-absolute
  @extend .animation
  position absolute

.content
  z-index 1
