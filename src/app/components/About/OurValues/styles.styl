@import '../../../common'

.frame
  {with-height-100}

.section
  {with-height-100}
  background url('./images/our-values.jpeg')
  background-position center 0px
  background-size cover
  background-repeat no-repeat
  left 0
  margin-top nav-height
  overflow hidden
  padding-top 50px
  position fixed
  width 100%
  z-index -1
  +media-lt(sm)
    background gray-sm
    margin-top nav-height-sm
    padding-top 15px
    p
      margin-bottom 15px

.content
  display flex
  margin-top 30px
  +media-lt(sm)
    margin-top 0
  ul
    flex 1
    padding 0 40px
    +media-lt(sm)
      list-style-type none
      padding 0
  li
    padding 10px 0
    +media-lt(sm)
      font-size 14px
      line-height 14px
      padding 7px 0
