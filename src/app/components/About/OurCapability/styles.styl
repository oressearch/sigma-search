@import '../../App/mixins'

.section
  background #252a2d
  flex-direction column
  overflow hidden
  justify-content center
  padding-bottom 75px
  padding-top 75px
  position relative
  z-index 1

  @media (max-width 767.98px) and (orientation portrait)
    min-height unset
    height 100%
    padding-bottom 15px
    padding-top 15px

.container
  align-items center
  color white
  display flex
  pointer-events none
  z-index 1
  background: radial-gradient(circle, rgba(37,42,45,.5) 25%, rgba(37,42,45,0) 100%);

.content
  width 100%
  ul
    list-style-type none
    margin-top 2rem
    display grid
    grid-auto-flow rows
    grid-template-columns repeat(2, minmax(0, 1fr))
    grid-gap 5rem;
    text-align justify
    padding 0 1rem

    +media-lt(md)
      grid-gap 2.5rem;

    +media-lt(sm)
      grid-template-columns minmax(0, 1fr)
      grid-gap 1rem;

  li
    display grid
    grid-column-gap 1rem
    grid-auto-flow column

.img
  width: auto
  position: absolute
  bottom: 10px
  right: 10px
  cursor: pointer;
  max-width: 225px

  +media-lt(md)
    max-width: 175px

  @media (max-width 767.98px) and (orientation portrait)
    display none

.anim
  top: 0;
  bottom: inherit;

  @media (max-width 767.98px) and (orientation portrait)
    display none
