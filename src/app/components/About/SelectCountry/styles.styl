@import '../../App/mixins'

.section
  {with-height-100}
  background black-md
  flex-direction column
  height 0
  overflow hidden
  justify-content center
  padding-bottom 50px
  padding-top 50px
  position relative
  z-index 1
  background-image url('./background.jpeg')
  background-position center center
  background-size cover  
  +media-lt(sm)
    justify-content end
    min-height calc(75vh - 60px)
    background-image url('./background-mobile.jpeg')
