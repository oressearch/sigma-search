@import './common'

// ------------------------------------------------------------------ # Blocks #

text =
  font-size 20px
  line-height 23px
  +media-lt(sm)
    font-size 18px
    line-height 23px

subtitle =
  font-size 22px
  line-height 25px
  margin 0 0 30px 0
  +media-lt(sm)
    font-size 18px
    line-height 23px

// ------------------------------------------------------------------ # Styles #

*
  box-sizing border-box
  font-family Poppins, sans-serif

body
  margin 0
  padding nav-height 0 0 0
  +media-lt(sm)
    padding nav-height-sm 0 0 0

img
  display block
  width 100%

ul
  margin 0
  padding 0

li
  {text}

a
  {text}
  color inherit
  text-decoration none
  &:hover
    text-decoration underline

p
  {text}
  margin 25px 0 0 0

h1, h2
  font-size 52px
  font-weight 700
  line-height 52px
  margin 0
  +media-lt(sm)
    font-size 42px
    line-height 42px

h1 + p
  {subtitle}
  font-weight 600

h2 + p
  {subtitle}
