@import 'stylus-media-breakpoint'
@import './variables'

*
  box-sizing border-box
  font-family Poppins, sans-serif

body
  margin 0
  padding nav-height 0 0 0
  +media-lt(sm)
    padding nav-height-sm 0 0 0

img
  display block
  width 100%

ul
  margin 0
  padding 0

li
  font-size 20px
  line-height 23px
  +media-lt(sm)
    font-size 18px
    line-height 23px

a
  color inherit
  text-decoration none
  &:hover
    text-decoration underline
  +media-lt(sm)
    font-size 18px
    line-height 23px

p
  font-size 20px
  line-height 23px
  margin 25px 0 0 0
  +media-lt(sm)
    font-size 18px
    line-height 23px

h1, h2
  font-size 52px
  font-weight 700
  line-height 52px
  margin 0
  +media-lt(sm)
    font-size 42px
    line-height 42px

h1 + p
  font-size 22px
  line-height 25px
  font-weight 600
  margin 0 0 30px 0
  +media-lt(sm)
    font-size 18px
    line-height 23px
