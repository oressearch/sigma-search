@import 'stylus-media-breakpoint'

black-sm = #444545
black-md = #2b2e31
white    = #ffffff
gray-lg  = #adadad
gray-md  = #e0e0e0
gray-sm  = #f0efee
blue     = #5ec8e3
blue-sm  = #397184
teal     = #44565d

nav-height = 100px
nav-height-sm = 60px

with-height-100 =
  height auto
  min-height "calc(100vh - %s)" % nav-height
  +media-lt(sm)
    min-height "calc(100vh - %s)" % nav-height-sm
